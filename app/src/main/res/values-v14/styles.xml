<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces AppBaseTheme
        from BOTH res/values/styles.xml and res/values-v11/styles.xml on API 14+ devices.
    -->

    <style name="RunAceTheme" parent="RunAceTheme.Base">
        <!-- Base application theme -->
    </style>

    <style name="RunAceTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Action bar background colour -->
        <item name="colorPrimary">@color/runace_blue_primary</item>

        <!-- Status bar background colour -->
        <item name="colorPrimaryDark">@color/runace_blue_dark</item>

        <!-- Accent colour used in widgets -->
        <item name="colorAccent">@color/runace_red_primary</item>

        <!-- TextView style -->
        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <!-- Button style -->
        <!--<item name="android:buttonStyle">@style/ButtonStyle</item>-->

    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/runace_grey_dark</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@color/runace_blue_dark</item>
    </style>




    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/runace_green_dark</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>